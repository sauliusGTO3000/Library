        <div class="row justify-content-center mb-4">
            <span class="display-4" style="font-size: 2.0rem">Login</span>
        </div>
        <div class="form-group">
            <form action="{{ path("fos_user_security_check") }}" method="post">
                {% if csrf_token %}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                {% endif %}
                <div class="row justify-content-center">
                    <input type="text" id="username" class="form-control col-10 mb-1" name="_username" value="{{ last_username }}" required="required" autocomplete="username" placeholder="username"/>
                </div>
                <div class="row justify-content-center">
                    <input type="password" id="password" class="form-control  col-10 mb-1" name="_password" required="required" autocomplete="current-password" placeholder="password" />
                </div>
                <div class="row row justify-content-center">
                    <input type="submit" id="_submit" class="btn btn-success  col-10 mt-2"  name="_submit" value="{{ 'security.login.submit'|trans }}" style="background-color: rgb(31,179,114)"/>
                </div>
            </form>
        </div>
    </div>
</div>
